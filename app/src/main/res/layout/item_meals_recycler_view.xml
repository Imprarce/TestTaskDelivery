<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/meal_image"
        android:layout_width="@dimen/value_120_dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingStart="@dimen/value_16_dp"
        android:paddingTop="@dimen/value_8_dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/plug"/>

        <TextView
            android:id="@+id/pizza_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_8_dp"
            android:textSize="@dimen/value_14_sp"
            android:fontFamily="sans-serif-light"
            android:text="@string/plug"/>

        <Space
            android:layout_width="@dimen/value_0_dp"
            android:layout_height="@dimen/value_0_dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pizza_price"
            android:layout_width="@dimen/value_120_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/value_16_dp"
            android:background="@drawable/custom_rectangle_for_button"
            android:padding="@dimen/value_8_dp"
            android:text="@string/_345"
            android:textColor="@color/light_red_for_button_pizza"
            android:gravity="center"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>



</LinearLayout>